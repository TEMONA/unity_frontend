{
	"root": true,
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"parser": "babel-eslint",
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": [
		"@nuxtjs",
		"eslint:recommended",
		"plugin:vue/recommended",
		"plugin:nuxt/recommended",
		"plugin:gridsome/recommended",
		"prettier",
		"prettier/vue"
	],
	"plugins": ["vue"],
	"rules": {
		"no-console": "warn",
		"indent": [2, "tab"],
		"vue/no-v-html": "off",
		"no-fallthrough": "off",
		"node/handle-callback-err": "off",
		"node/no-new-require": "off",
		"node/no-path-concat": "off",
		"array-bracket-spacing": ["error", "never"],
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "all",
				"useTabs": true
			}
		]
	}
}
